@model List<Arkadaslar>

@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-striped table-hover"

<thead>
    <tr>
        <th>Id</th>
        <th>FullName</th>
        <th>Address</th>
        <th>Phone</th>
    </tr>
</thead>

<tbody>
    @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
            </tr>
        }
    </tbody>
   </table>